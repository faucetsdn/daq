{
  "title": "System metadata snippet",
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "location": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "site_name": {
          "type": "string",
          "pattern": "^[A-Z]{2}-[A-Z]{3}-[A-Z0-9]+$"
        },
        "section": {
          "type": "string",
          "pattern": "^[A-Z0-9-]+$"
        },
        "position": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "x": {
              "type": "number"
            },
            "y": {
              "type": "number"
            }
          },
          "required": [
            "x",
            "y"
          ]
        }
      },
      "required": [
        "site_name",
        "section"
      ]
    },
    "physical_tag": {
      "type": "object",
      "properties": {
        "asset": {
          "type": "object",
          "properties": {
            "additionalProperties": false,
            "guid": {
              "type": "string",
              "pattern": "^[a-z]+://[0-9a-zA-Z_$]+$"
            },
            "name": {
              "type": "string",
              "pattern": "^[A-Z]{2}-[A-Z]{3}-[A-Z0-9]+_[A-Z]{3}-[1-9][0-9]{0,2}$"
            }
          },
          "required": [
            "guid",
            "name"
          ]
        }
      },
      "required": [
        "asset"
      ]
    }
  },
  "required": [
    "location",
    "physical_tag"
  ]
}
