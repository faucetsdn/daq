{
  "title": "Pointset telemetry schema",
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "version": {
      "enum": [
        1
      ]
    },
    "points": {
      "additionalProperties": false,
      "patternProperties": {
        "^[a-z][a-z0-9]*(_[a-z0-9]+)*$": {
          "$ref": "#/definitions/point_property_names"
        }
      }
    }
  },
  "required": [
    "timestamp",
    "version",
    "points"
  ],
  "definitions": {
    "point_property_names": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "present_value": {
          "type": ["number", "string", "boolean"]
        },
        "fittings_value": {
          "type": "object",
          "patternProperties": {
            "^[a-z][a-z0-9]*(_[a-z0-9]+)*$": {
              "type": ["number", "string", "boolean"]
            }
          }
        }
      },
      "oneOf": [
        { "required": [ "present_value" ] },
        { "required": [ "fittings_value" ] }
      ]
    }
  }
}
