{
  "title": "Pointset metadata snippet",
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "points": {
      "additionalProperties": false,
      "patternProperties": {
        "^[a-z][a-z0-9]*(_[a-z0-9]+)*$": {
          "additionalProperties": false,
          "properties": {
            "units": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "required": [
    "points"
  ]
}
