{
  "title": "Message envelope schema",
  "additionalProperties": true,
  "properties": {
    "deviceId": {
      "type": "string",
      "pattern": "^[A-Z]{3}-[1-9][0-9]{0,2}$"
    },
    "deviceNumId": {
      "type": "string",
      "pattern": "^[0-9]+$"
    },
    "deviceRegistryId": {
      "type": "string",
      "pattern": "^[a-zA-Z][-a-zA-Z0-9._+~%]*[a-zA-Z0-9]$"
    },
    "projectId": {
      "type": "string",
      "pattern": "^([.a-z]+:)?[a-z][-a-z0-9]*[a-z0-9]$"
    },
    "subFolder": {
      "enum": [
        "state",
        "config",
        "pointset",
        "logentry",
        "discover",
        "metadata"
      ]
    }
  },
  "required": [
    "projectId",
    "deviceRegistryId",
    "deviceNumId",
    "deviceId",
    "subFolder"
  ]
}
