{
  "title": "DAQ System Properties",
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "device_description": {
      "type": "string"
    },
    "modules": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "[a-z]{1,2}": {
          "type": "object",
          "properties": {
            "additionalProperties": false,
            "enabled": {
              "type": "boolean"
            }
          }
        }
      }
    },
    "process": {
      "additionalProperties": false,
      "properties": {
        "approver": {
          "type": "string"
        },
        "operator": {
          "type": "string"
        },
        "reviewer": {
          "type": "string"
        }
      }
    }
  }
}
