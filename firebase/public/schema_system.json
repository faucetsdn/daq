{
  "title": "DAQ System Properties",
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "required": [
    "device_description",
    "modules",
    "process"
  ],
  "properties": {
    "device_description": {
      "type": "string"
    },
    "modules": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "[a-z]": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": {
              "type": "boolean"
            }
          }
        }
      }
    },
    "process": {
      "additionalProperties": false,
      "properties": {
        "approver": {
          "type": "string",
          "pattern": "^[^*]"
        },
        "operator": {
          "type": "string",
          "pattern": "^[^*]"
        },
        "reviewer": {
          "type": "string",
          "pattern": "^[^*]"
        }
      }
    }
  }
}
